<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--top lable-->
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/title_city"/>

        <ImageView
            android:id="@+id/title_seperator"
            android:layout_width="1.0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="#A71717"/>
            <!--android:layout_marginTop="2dp"-->

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="北京天气"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#ffffffff"
            android:textSize="22.0sp"/>
            <!--android:paddingLeft="5dp"-->


        <ImageView
            android:id="@+id/title_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/base_action_bar_action_city"/>

        <ImageView
            android:id="@+id/title_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/title_share"/>

        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/title_update"/>
    </LinearLayout>

    <!--other-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical">

        <!--today weather-->
        <RelativeLayout
            android:id="@+id/weather_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!--city&time&humidity block-->
            <RelativeLayout
                android:id="@+id/city_humidity_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <!--city name-->
                <TextView
                    android:id="@+id/city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:singleLine="true"
                    android:textSize="40sp"
                    android:textColor="@android:color/white"/>

                <!--release time-->
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/city_name"
                    android:text="今天18:25发布"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

                <!--temperature info-->
                <TextView
                    android:id="@+id/humidity_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time"
                    android:text="湿度:57%"
                    android:singleLine="true"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>


            <!--PM2.5 block-->
            <RelativeLayout
                android:id="@+id/PM2.5_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/city_humidity_block"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <!--PM2.5 info-->
                <RelativeLayout
                    android:id="@+id/Pm2.5_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pm2.5_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/biz_plugin_weather_0_50" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@+id/pm2.5_img"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/pm2.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:singleLine="true"
                            android:gravity="center"
                            android:text="PM2.5"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:id="@+id/pm2.5_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pm2.5"
                            android:singleLine="true"
                            android:gravity="center"
                            android:text="100"
                            android:textSize="30sp"
                            android:textColor="@android:color/white"/>
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Pm2.5_info"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="重度污染"
                    android:layout_marginTop="3dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>

            <!--today weather block-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/city_humidity_block"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp">

                <!--today weather img-->

                <RelativeLayout
                    android:id="@+id/weather_imgandtemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/weather_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/biz_plugin_weather_qing"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="center"
                        android:text="当前温度 5°C"
                        android:layout_below="@+id/weather_img"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/weather_imgandtemp"
                    android:layout_marginLeft="10dp">

                    <!--today week-->
                    <TextView
                        android:id="@+id/week_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:text="今天 星期三"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"/>

                    <!--today temp-->
                    <TextView
                        android:id="@+id/temp_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/week_today"
                        android:singleLine="true"
                        android:text="-2°C~7°C"
                        android:layout_marginTop="5dp"
                        android:textSize="30sp"
                        android:textColor="@android:color/white"/>

                    <!--today climate-->
                    <TextView
                        android:id="@+id/climate_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/temp_today"
                        android:singleLine="true"
                        android:text="多云转晴"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"/>

                    <!--today wind-->
                    <TextView
                        android:id="@+id/wind_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/climate_today"
                        android:singleLine="true"
                        android:text="微风"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"/>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!--seven weather-->

        <!--ad info-->

    </LinearLayout>

</RelativeLayout>
